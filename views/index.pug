extends layout

block content
  div(class="mdl-layout mdl-js-layout mdl-color--grey-100")
    div(class="mdl-card mdl-shadow--2dp")
      div(class="mdl-card__title mdl-color--primary mdl-color-text--white")
        h2(class="mdl-card__title-text")= title
      form(name="key", action="auth", method="post")
        div(class="mdl-card__supporting-text")  
          div(class="mdl-textfield mdl-js-textfield")
            input(class="mdl-textfield__input", type="text", name="key")
            label(class="mdl-textfield__label")="Key"
        div(class="mdl-card__actions mdl-card--border")
          input(class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect", type="submit", name="action", value="Authenticate")
          input(class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect", type="submit", name="action", value="End")